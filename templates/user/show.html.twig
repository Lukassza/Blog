{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
{% include "Header.php" %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ app.user.email }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ user.photo }}</td>
            </tr>
